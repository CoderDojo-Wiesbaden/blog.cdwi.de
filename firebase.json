{
  "hosting": {
    "public": "_site",
    "cleanUrls": true,
    "trailingSlash": false,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/anmelden",
        "destination": "https://coderdojo-wiesbaden.de/anmeldung",
        "type": 301
      },
      {
        "source": "/a",
        "destination": "https://zen.coderdojo.com/dojos/de/wiesbaden/wiesbaden-at-st-bonifatius",
        "type": 301
      },
      {
        "source": "/termine",
        "destination": "https://coderdojo-wiesbaden.de/anmeldung#termine",
        "type": 301
      }
    ],
    "headers": [
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=2628000"
          }
        ]
      },
      {
        "source": "/public/css/theme.css",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=1209000"
          }
        ]
      },
      {
        "source": "/public/css/custom.css",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=86400"
          }
        ]
      },
      {
        "source": "/public/js/main.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=172800"
          }
        ]
      }
    ]
  }
}